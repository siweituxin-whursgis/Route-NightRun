<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context="com.example.huyigong.route_nightrun.RunningEstimateFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="430dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">


          

        <RadioButton
            android:id="@+id/running_estimate"

            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:checked="true"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/test"
            android:padding="5dp"
            android:text="评价"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray" />


          

        <RadioButton
            android:id="@+id/running"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/running"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="夜跑"
            android:textColor="@android:color/darker_gray" />

          

        <RadioButton
            android:id="@+id/runningAppointment"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/talk"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="约跑"
            android:textColor="@android:color/darker_gray" />

          

        <RadioButton
            android:id="@+id/running_safety"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/safe"
            android:gravity="center_horizontal|bottom"
            android:padding="5dp"
            android:text="报警"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"

        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/CallPolice"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"

            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/side"
            android:drawableLeft="@drawable/police"
            android:drawableRight="@drawable/gotoright"
            android:gravity="left|center"
            android:text="一键报警"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schoolPolice"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/side"
            android:drawableLeft="@drawable/school"

            android:drawableRight="@drawable/gotoright"
            android:gravity="left|center"
            android:text="联系学校保卫部"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backTime"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/side"
            android:drawableLeft="@drawable/clock"

            android:drawableRight="@drawable/gotoright"
            android:gravity="left|center"
            android:text="回寝提醒时间设置"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/car"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.08"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/side"

            android:drawableLeft="@drawable/car"
            android:drawableRight="@drawable/gotoright"
            android:gravity="left|center"
            android:text="一键叫车"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search_friends"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/side"
            android:drawableLeft="@drawable/friends_run"

            android:drawableRight="@drawable/gotoright"
            android:gravity="left|center"
            android:text="搜寻附近同伴"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</FrameLayout>
